<resources>

    <style name="Theme.ZioSpace.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">

        <item name="android:background">@color/PrimaryColor</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="itemIconTint">@color/PrimaryAccent</item>
        <item name="itemTextColor">@color/semi_white</item>

        <item name="itemTextAppearanceActive">@color/PrimaryAccent</item>
        <item name="itemTextAppearanceInactive">@style/InactiveItemText</item>
    </style>

    <style name="ActiveItemText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InactiveItemText">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>