<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/etopbar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/PrimaryColor"
    android:elevation="6dp"
    android:padding="5dp">

    <ImageButton
        android:id="@+id/appbarlefticon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        android:src="@drawable/icon_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/appbartitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/appbarlefticon"
        android:fontFamily="@font/capriola"
        android:text="Title "
        android:textColor="@color/semi_white"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appbarsubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbartitle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/appbarlefticon"
        android:text="Sub title"
        android:textColor="@color/semi_white"
        android:textSize="18sp"
        android:visibility="gone" />

    <ImageButton

        android:id="@+id/appbarrighticon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        android:src="@drawable/icon_user"
        android:visibility="gone" />


</RelativeLayout>
