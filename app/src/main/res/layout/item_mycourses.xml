<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myc_card"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:layout_margin="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/myc_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_course" />

        <TextView
            android:id="@+id/myc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/myc_img"
            android:text=" Loading Title"
            android:textSize="15sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/myc_start_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@id/progressBar2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_continue"
            android:backgroundTint="@color/PrimaryColor"
            app:tint="@color/PrimaryColor" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:progress="50"
            android:progressTint="@color/PrimaryAccent" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

